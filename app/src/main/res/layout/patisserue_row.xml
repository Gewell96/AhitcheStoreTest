<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/idprod_pat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="2dp"
        android:textColor="@color/colorBlack"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/imr_pat"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/no_tof"
       />
    <TextView
                android:id="@+id/deprod_pat"
                android:layout_width="150dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
                android:text="Designation blablabla"/>
            <TextView
                android:id="@+id/prixprod_pat"
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="190000000"/>
    <TextView
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
            android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="FCFA"
        />
    <TextView
        android:id="@+id/imgprod_pat"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
      />


    </LinearLayout>
