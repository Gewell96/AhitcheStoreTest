<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleGridItem">



    <ImageView
        android:id="@+id/imagvart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/images"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/txtidprod"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="visible"

        />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/imagvart"
        android:background="@color/colorGris2"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Article:"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt_deprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt_deprod"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Prix Unitaire:"
            android:textColor="#000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt_prixprod"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txt_deprod"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="QuantitÃ©:"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:textColor="#000"
            android:textSize="20dp" />
        <Button
            android:id="@+id/avatar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ic_moins"
            android:layout_marginLeft="120dp"
           />
        <TextView
            android:id="@+id/vqtdmd"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="1"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            />
        <Button
            android:id="@+id/avatar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ic_plus"
            android:layout_marginLeft="200dp"
            />
        <Button
            android:id="@+id/ajpanier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Ajouter au panier"
            android:textColor="@color/colorBlack"
            android:backgroundTint="#FF4500"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_editext"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Montant:"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vmttpan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200F CFA"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/imaprod"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="le lien de limage"
        android:textColor="#000"
        android:textSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Fab_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorGris2"
        android:src="@drawable/ic_panier"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Fabsuppr_art"
        android:layout_width="wrap_content"
        app:fabSize="mini"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/colorRed"
        android:src="@drawable/ic_delete"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FabModif_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorBlue"
        android:src="@drawable/ic_mode_edit_black_24dp"/>

</RelativeLayout>